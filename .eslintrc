{
  "extends": [
    "airbnb"
  ],
  "env": {
    "node": true
  },
  "rules": {
    "strict": 0,
    "comma-dangle": [2, "never"],

    // AirBnB Optimization
    "max-len": [1, 120, 2, {ignoreComments: true}],
    "quote-props": [1, "consistent-as-needed"],
    "no-cond-assign": [2, "except-parens"],
    "no-unused-vars": [1, {"vars": "local", "args": "none"}],
    "no-param-reassign": 0,

    // Questionable rules to be applied.
    "consistent-return": 0,

    // ES6 Specific Rules
    "no-dupe-class-members": 0,
    "no-var": 0,
    "object-shorthand": 0,
    "prefer-arrow-callback": 0,
    "prefer-spread": 0,
    "prefer-reflect": 0,
    "prefer-template": 0
  },
  "globals": {
    "sails": true
  }
}
